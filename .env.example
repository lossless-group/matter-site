# Dark Matter - Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# Passcode Authentication
# -----------------------
# Option 1: Plaintext (development mode - simpler for rotation)
UNIVERSAL_PORTFOLIO_PASSCODE_PLAINTEXT=YOUR_PASSCODE_HERE

# Option 2: Hashed (production mode - more secure)
# Generate hash: echo -n "YOUR_PASSCODE${SALT}" | sha256sum
# UNIVERSAL_PORTFOLIO_PASSCODE_SALT=your_random_32char_salt_here
# UNIVERSAL_PORTFOLIO_PASSCODE_HASH=your_sha256_hash_here

# GitHub Content Repository (Optional - for memo integration)
# -----------------------------------------------------------
# GITHUB_CONTENT_PAT=github_pat_xxxxx
# GITHUB_CONTENT_OWNER=lossless-group
# GITHUB_CONTENT_REPO=dark-matter-private-data
# GITHUB_CONTENT_BRANCH=main

# Memo Discovery Mode (Development)
# ----------------------------------
# Set to 'true' to use local orchestrator paths for memo version discovery
# instead of querying GitHub. Useful during development when GitHub repo
# doesn't have the latest memo versions synced.
# MEMO_DISCOVERY_LOCAL=true
