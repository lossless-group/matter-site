---
import BaseThemeLayout from '@layouts/BaseThemeLayout.astro';
import { getPortfolioCompanies, isNocoDBConfigured } from '@lib/nocodb';

// Fallback to static JSON if NocoDB is not configured
import staticPortfolioData from '@content/portfolio/portfolio-companies.json';

// Public page - can be prerendered for performance
export const prerender = true;

// Fetch portfolio data from NocoDB, with static fallback
let portfolioData;
if (isNocoDBConfigured()) {
  console.log('[portfolio] Fetching from NocoDB...');
  portfolioData = await getPortfolioCompanies();
  console.log(`[portfolio] Loaded ${portfolioData.length} companies from NocoDB`);
} else {
  console.log('[portfolio] NocoDB not configured, using static data');
  portfolioData = staticPortfolioData;
}

// Separate companies by category
const directInvestments = portfolioData.filter(c => c.category === 'direct');
const lpCommitments = portfolioData.filter(c => c.category === 'lp');
const allCompanies = portfolioData;
---

<BaseThemeLayout title="Portfolio | Dark Matter" description="Our portfolio of investments and fund commitments">
  <section class="px-6 py-16">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl font-bold tracking-tight">Portfolio</h1>
        <p class="mt-4 text-lg text-foreground/70 max-w-2xl">
          Companies and funds we've backed. Building the future through strategic investments.
        </p>
      </header>

      <!-- Direct Investments Section -->
      {directInvestments.length > 0 && (
        <section class="mb-16">
          <h2 class="text-xl font-semibold mb-6 text-foreground/80">Direct Investments</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {directInvestments.map((company) => (
              <a
                href={company.urlToPortfolioSite}
                target="_blank"
                rel="noopener noreferrer"
                class="group p-6 rounded-xl border border-border/40 bg-surface/30 hover:border-primary/50 hover:bg-surface/50 transition-all duration-200"
              >
                <!-- Logo for dark/vibrant modes -->
                <img
                  src={company.logoDarkMode || company.logoLightMode}
                  alt={company.conventionalName}
                  class:list={[
                    "h-10 w-auto object-contain logo-for-dark",
                    company.logoIsTransparent && "logo-transparent"
                  ]}
                  style={company.logoMinWidth ? `min-width: ${company.logoMinWidth}` : undefined}
                  loading="lazy"
                />
                <!-- Logo for light mode -->
                <img
                  src={company.logoLightMode}
                  alt={company.conventionalName}
                  class:list={[
                    "h-10 w-auto object-contain logo-for-light",
                    company.logoIsTransparent && "logo-transparent"
                  ]}
                  style={company.logoMinWidth ? `min-width: ${company.logoMinWidth}` : undefined}
                  loading="lazy"
                />
                <p class="mt-4 text-sm font-medium text-foreground group-hover:text-primary transition-colors">
                  {company.conventionalName}
                </p>
                <p class="mt-1 text-xs text-foreground/50 line-clamp-2">
                  {company.blurbShortTxt}
                </p>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- LP Commitments Section -->
      {lpCommitments.length > 0 && (
        <section class="mb-16">
          <h2 class="text-xl font-semibold mb-6 text-foreground/80">LP Commitments</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {lpCommitments.map((company) => (
              <a
                href={company.urlToPortfolioSite}
                target="_blank"
                rel="noopener noreferrer"
                class="group p-6 rounded-xl border border-border/40 bg-surface/30 hover:border-primary/50 hover:bg-surface/50 transition-all duration-200"
              >
                <!-- Logo for dark/vibrant modes -->
                <img
                  src={company.logoDarkMode || company.logoLightMode}
                  alt={company.conventionalName}
                  class:list={[
                    "h-10 w-auto object-contain logo-for-dark",
                    company.logoIsTransparent && "logo-transparent"
                  ]}
                  style={company.logoMinWidth ? `min-width: ${company.logoMinWidth}` : undefined}
                  loading="lazy"
                />
                <!-- Logo for light mode -->
                <img
                  src={company.logoLightMode}
                  alt={company.conventionalName}
                  class:list={[
                    "h-10 w-auto object-contain logo-for-light",
                    company.logoIsTransparent && "logo-transparent"
                  ]}
                  style={company.logoMinWidth ? `min-width: ${company.logoMinWidth}` : undefined}
                  loading="lazy"
                />
                <p class="mt-4 text-sm font-medium text-foreground group-hover:text-primary transition-colors">
                  {company.conventionalName}
                </p>
                <p class="mt-1 text-xs text-foreground/50 line-clamp-2">
                  {company.blurbShortTxt}
                </p>
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Confidential Access CTA -->
      <section class="mt-16 p-8 rounded-2xl border border-border/30 bg-surface/20 text-center">
        <h3 class="text-lg font-semibold mb-2">Looking for more details?</h3>
        <p class="text-foreground/60 text-sm mb-4">
          Authorized investors can access confidential portfolio information.
        </p>
        <a
          href="/portfolio-gate"
          class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg bg-primary text-primary-foreground text-sm font-medium hover:opacity-90 transition-opacity"
        >
          Access Confidential View
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
          </svg>
        </a>
      </section>
    </div>
  </section>
</BaseThemeLayout>

<style>
  /* Logo visibility based on theme mode */
  /* Light mode: show light-mode logos, hide dark-mode logos */
  :global([data-mode="light"]) .logo-for-dark {
    display: none !important;
  }
  :global([data-mode="light"]) .logo-for-light {
    display: block !important;
  }

  /* Dark mode: show dark-mode logos, hide light-mode logos */
  :global([data-mode="dark"]) .logo-for-light {
    display: none !important;
  }
  :global([data-mode="dark"]) .logo-for-dark {
    display: block !important;
  }

  /* Vibrant mode: show dark-mode logos (same as dark mode) */
  :global([data-mode="vibrant"]) .logo-for-light {
    display: none !important;
  }
  :global([data-mode="vibrant"]) .logo-for-dark {
    display: block !important;
  }

  /* Transparent logo color treatment */
  .logo-transparent {
    transition: filter 0.2s ease;
  }

  /* Light mode: dark logo (black) */
  :global([data-mode="light"]) .logo-transparent {
    filter: brightness(0);
  }

  /* Dark mode: light logo (white) */
  :global([data-mode="dark"]) .logo-transparent {
    filter: brightness(0) invert(1);
  }

  /* Vibrant mode: light logo (white) */
  :global([data-mode="vibrant"]) .logo-transparent {
    filter: brightness(0) invert(1);
  }
</style>
