        <h1 class="headline">Fund Strategy</h1>
        <p class="statement">
          Portfolio construction designed for category-defining longevity outcomes
        </p>
        <div class="hero-metrics">
          <div class="metric">
            <span class="metric-value">$100M</span>
            <span class="metric-label">Fund Size</span>
          </div>
          <div class="metric">
            <span class="metric-value">10</span>
            <span class="metric-label">Year Term</span>
          </div>
          <div class="metric">
            <span class="metric-value">25</span>
            <span class="metric-label">Target Investments</span>
          </div>
        </div>
      </div>
    </section>

    <!-- =========================================================================
         SECTION 13: Economics & Alignment
         ========================================================================= -->
    <section class="slide slide-economics" id="economics">
      <div class="slide-gradient"></div>
      <div class="slide-content">
        <span class="badge">Economics</span>
        <h2 class="section-title-centered">LP-GP Alignment</h2>
        <div class="economics-grid">
          <div class="economics-card">
            <span class="economics-value">2%</span>
            <span class="economics-label">Management Fee</span>
            <span class="economics-desc">Annual on committed capital</span>
          </div>
          <div class="economics-card">
            <span class="economics-value">20-25%</span>
            <span class="economics-label">Carried Interest</span>
            <span class="economics-desc">Performance fee, back-ended</span>
          </div>
          <div class="economics-card">
            <span class="economics-value">Meaningful</span>
            <span class="economics-label">GP Commitment</span>
