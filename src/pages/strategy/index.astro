---
/**
 * Design System: Messages Showcase
 *
 * A page for iterating on different slide messages and data visualizations.
 * Displays section components that present key fund messaging.
 */
import BaseThemeLayout from '@layouts/BaseThemeLayout.astro';

// Import narrative section components
import AgingPopulation from '@sections/narratives/AgingPopulation.astro';
import TheAgingCrisis from '@sections/narratives/TheAgingCrisis-v1.astro';
import DarkMatterDifferentiation from '@sections/narratives/DarkMatterDifferentiation.astro';
import ExitPotential from '@sections/narratives/ExitPotential.astro';
import FundPortfolioConstructionDetails from '@sections/narratives/FundPortfolioConstructionDetails.astro';
---

<BaseThemeLayout title="Messages - Design System" mode="dark">
  <div class="design-system-header py-8 px-6 text-center border-b border-(--color-border)">
    <h1 class="text-3xl font-bold mb-2">Message Variants</h1>
    <p class="text-(--color-muted-foreground)">
      Slide message designs from <code class="bg-(--color-muted) px-2 py-1 rounded text-sm">layouts/sections/</code>
    </p>
  </div>

  <!-- The Aging Crisis Section -->
  <div class="variant-section">
    <div class="variant-label">The Aging Crisis: The Problem We're Solving</div>
    <TheAgingCrisis />
  </div>

  <!-- Aging Population Section -->
  <div class="variant-section">
    <div class="variant-label">Aging Population: The Longevity Opportunity</div>
    <AgingPopulation />
  </div>

  <!-- Dark Matter Differentiation Section -->
  <div class="variant-section">
    <div class="variant-label">Our Differentiation: Why Dark Matter</div>
    <DarkMatterDifferentiation />
  </div>

  <!-- Exit Potential Section -->
  <div class="variant-section">
    <div class="variant-label">Exit Potential: IPOs & M&A</div>
    <ExitPotential />
  </div>

  <!-- Fund Portfolio Construction Section -->
  <div class="variant-section">
    <div class="variant-label">Fund Strategy: Portfolio Construction</div>
    <FundPortfolioConstructionDetails />
  </div>
</BaseThemeLayout>

<style>
  .variant-section {
    position: relative;
    border-bottom: 1px solid var(--color-border);
  }

  .variant-label {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 50;
    padding: 0.5rem 1rem;
    background: var(--color-muted);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted-foreground);
  }
</style>
