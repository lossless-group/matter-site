---
/**
 * Design System: Vibrant Mode Showcase
 *
 * Displays the original creative hero variants (v4-v7) from the vibrant folder.
 * These are the original designs before any mode refactoring.
 */
import BaseThemeLayout from '@layouts/BaseThemeLayout.astro';

// Import the original vibrant designs
import WhyNowWhyUsV5 from '@sections/narratives/vibrant/WhyNowWhyUs-v5.astro';
import WhyNowWhyUsV6 from '@sections/narratives/vibrant/WhyNowWhyUs-v6.astro';
import WhyNowWhyUsV7 from '@sections/narratives/vibrant/WhyNowWhyUs-v7.astro';
---

<BaseThemeLayout title="Vibrant Mode - Design System" mode="vibrant">
  <div class="design-system-header py-8 px-6 text-center border-b border-(--color-border)">
    <h1 class="text-3xl font-bold mb-2">Vibrant Mode Variants</h1>
    <p class="text-(--color-muted-foreground)">
      Original creative designs from <code class="bg-(--color-muted) px-2 py-1 rounded text-sm">narratives/vibrant/</code>
    </p>
  </div>


  <!-- V5: The Reveal -->
  <div class="variant-section">
    <div class="variant-label">V5: The Reveal</div>
    <WhyNowWhyUsV5 />
  </div>

  <!-- V6: The Manifesto -->
  <div class="variant-section">
    <div class="variant-label">V6: The Manifesto</div>
    <WhyNowWhyUsV6 />
  </div>

  <!-- V7: Orbital Narrative -->
  <div class="variant-section">
    <div class="variant-label">V7: Orbital Narrative</div>
    <WhyNowWhyUsV7 />
  </div>
</BaseThemeLayout>

<style>
  .variant-section {
    position: relative;
    border-bottom: 1px solid var(--color-border);
  }

  .variant-label {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 50;
    padding: 0.5rem 1rem;
    background: var(--color-muted);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted-foreground);
  }
</style>
