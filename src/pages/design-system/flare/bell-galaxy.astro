---
import FlarePageLayout from '@layouts/FlarePageLayout.astro';
import ImageAbstractBellShapedGalaxy from '@components/flare/ImageAbstract--BellShapedGalaxy.astro';
---

<FlarePageLayout
  title="Bell-Shaped Galaxy"
  description="Tubular cosmic structure with radial filaments and flowing stellar core."
  currentSlug="bell-galaxy"
>
  <div class="w-[min(80vw,480px)] h-[min(80vw,480px)]">
    <ImageAbstractBellShapedGalaxy size="100%" animationSpeed={0.3} />
  </div>

  <div slot="variants" class="grid gap-6 sm:grid-cols-3 mt-8">
    <div class="text-center">
      <div class="inline-block mb-3 w-[160px] h-[160px]">
        <ImageAbstractBellShapedGalaxy size="100%" animationSpeed={0.15} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Slow drift</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[160px] h-[160px]">
        <ImageAbstractBellShapedGalaxy
          size="100%"
          shellColor="#c084fc"
          filamentColor="#e879f9"
          coreColor="#a78bfa"
        />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Purple nebula</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[160px] h-[160px]">
        <ImageAbstractBellShapedGalaxy
          size="100%"
          shellColor="#60a5fa"
          filamentColor="#93c5fd"
          coreColor="#fbbf24"
        />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Blue shell</p>
    </div>
  </div>
</FlarePageLayout>
