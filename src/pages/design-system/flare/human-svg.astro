---
import FlarePageLayout from '@layouts/FlarePageLayout.astro';
import ImageAbstractHumanSVG from '@components/flare/ImageAbstract--HumanBody--SVG.astro';
---

<FlarePageLayout
  title="Human SVG"
  description="Full-body particle silhouette using SVG path for precise human contours."
  currentSlug="human-svg"
>
  <div class="w-[min(70vw,380px)] h-[min(90vw,500px)]">
    <ImageAbstractHumanSVG size="100%" />
  </div>

  <div slot="variants" class="grid gap-6 sm:grid-cols-3 mt-8">
    <div class="text-center">
      <div class="inline-block mb-3 w-[110px] h-[180px]">
        <ImageAbstractHumanSVG size="100%" color="#f9fafb" rotationSpeed={0.3} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Alabaster</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[110px] h-[180px]">
        <ImageAbstractHumanSVG size="100%" color="#9C85DF" rotationSpeed={0.4} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Lilac</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[110px] h-[180px]">
        <ImageAbstractHumanSVG size="100%" color="#6643e2" animate={false} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Static</p>
    </div>
  </div>
</FlarePageLayout>
