---
import FlarePageLayout from '@layouts/FlarePageLayout.astro';
import ImageAbstractChromosome from '@components/flare/ImageAbstract--Chromosome.astro';
---

<FlarePageLayout
  title="Chromosome"
  description="X-shaped chromosome with bright telomere caps - the protective ends that shorten with age."
  currentSlug="chromosome"
>
  <div class="w-[min(80vw,480px)] h-[min(80vw,480px)]">
    <ImageAbstractChromosome size="100%" animationSpeed={0.4} />
  </div>

  <div slot="variants" class="grid gap-6 sm:grid-cols-3 mt-8">
    <div class="text-center">
      <div class="inline-block mb-3 w-[160px] h-[160px]">
        <ImageAbstractChromosome size="100%" tiltAngle={0} animationSpeed={0.3} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Front view</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[160px] h-[160px]">
        <ImageAbstractChromosome size="100%" bodyColor="#6643e2" telomereColor="#a7ff83" />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Purple/Green</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[160px] h-[160px]">
        <ImageAbstractChromosome size="100%" animate={false} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Static</p>
    </div>
  </div>
</FlarePageLayout>
