---
import FlarePageLayout from '@layouts/FlarePageLayout.astro';
import ImageAbstractHumanBack from '@components/flare/ImageAbstract--HumanBody--BackView.astro';
---

<FlarePageLayout
  title="Human Back View"
  description="Back view silhouette with dense glowing head particles that fade down the body."
  currentSlug="human-back"
>
  <div class="w-[min(70vw,380px)] h-[min(90vw,500px)]">
    <ImageAbstractHumanBack size="100%" />
  </div>

  <div slot="variants" class="grid gap-6 sm:grid-cols-3 mt-8">
    <div class="text-center">
      <div class="inline-block mb-3 w-[120px] h-[180px]">
        <ImageAbstractHumanBack size="100%" rotationSpeed={0.15} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Rotating</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[120px] h-[180px]">
        <ImageAbstractHumanBack size="100%" color="#9C85DF" />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Lilac tint</p>
    </div>
    <div class="text-center">
      <div class="inline-block mb-3 w-[120px] h-[180px]">
        <ImageAbstractHumanBack size="100%" animate={false} />
      </div>
      <p class="text-sm text-(--color-alabaster)/60">Static</p>
    </div>
  </div>
</FlarePageLayout>
