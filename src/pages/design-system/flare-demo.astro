---
import BaseThemeLayout from '@layouts/BaseThemeLayout.astro';
import ImageAbstractOrb from '@components/flare/ImageAbstract--Orb--Half.astro';
import ImageAbstractHumanBody from '@components/flare/ImageAbstract--HumanBody--Particles.astro';
import ImageAbstractHumanSVG from '@components/flare/ImageAbstract--HumanBody--SVG.astro';
import ImageAbstractDNAFigure8 from '@components/flare/ImageAbstract--DNA-Figure8.astro';
import ImageAbstractGraphNetwork from '@components/flare/ImageAbstract--Graph-Network.astro';
---

<BaseThemeLayout
  title="Flare Components Demo | Dark Matter"
  description="Demo page for Dark Matter visual flare components"
  mode="dark"
>
  <section class="min-h-screen flex flex-col items-center justify-center px-6 py-20 bg-(--color-void)">
    <h1 class="text-3xl sm:text-4xl font-bold text-(--color-alabaster) mb-4">
      ImageAbstract--Orb
    </h1>
    <p class="text-(--color-lilac)/70 mb-12 text-center max-w-md">
      Three.js particle sphere with central void. Hover to see subtle movement.
    </p>

    <ImageAbstractOrb size="min(80vw, 500px)" />

    <div class="mt-16 grid gap-8 sm:grid-cols-3 max-w-4xl">
      <div class="text-center">
        <div class="inline-block mb-4">
          <ImageAbstractOrb size="150px" color="#9C85DF" rotationSpeed={0.5} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Lilac variant</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4">
          <ImageAbstractOrb size="150px" color="#6643e2" rotationSpeed={0.2} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Purple variant</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4">
          <ImageAbstractOrb size="150px" animate={false} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Static (no animation)</p>
      </div>
    </div>
  </section>

  <section class="min-h-screen flex flex-col items-center justify-center px-6 py-20 bg-(--color-void)">
    <h2 class="text-3xl sm:text-4xl font-bold text-(--color-alabaster) mb-4">
      ImageAbstract--Graph-Network
    </h2>
    <p class="text-(--color-lilac)/70 mb-12 text-center max-w-md">
      Dynamic graph network flare with softly drifting nodes and flickering connections.
    </p>

    <div class="w-[min(80vw,520px)] h-[min(100vw,520px)]">
      <ImageAbstractGraphNetwork size="100%" rotationSpeed={0.25} />
    </div>

    <div class="mt-16 grid gap-8 sm:grid-cols-3 max-w-4xl">
      <div class="text-center">
        <div class="inline-block mb-4 w-[220px] h-[220px]">
          <ImageAbstractGraphNetwork size="100%" rotationSpeed={0.2} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Slow, calm regime</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[220px] h-[220px]">
          <ImageAbstractGraphNetwork size="100%" rotationSpeed={0.4} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">High-activity regime</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[220px] h-[220px]">
          <ImageAbstractGraphNetwork size="100%" animate={false} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Static snapshot</p>
      </div>
    </div>
  </section>

  <section class="min-h-screen flex flex-col items-center justify-center px-6 py-20 bg-(--color-void)">
    <h2 class="text-3xl sm:text-4xl font-bold text-(--color-alabaster) mb-4">
      ImageAbstract--DNA-Figure8
    </h2>
    <p class="text-(--color-lilac)/70 mb-12 text-center max-w-md">
      Dual-ring DNA figure-eight made of colorful acoustic spikes.
    </p>

    <div class="w-[min(80vw,520px)] h-[min(100vw,520px)]">
      <ImageAbstractDNAFigure8 size="100%" intensity={1.2} rotationSpeed={0.3} />
    </div>

    <div class="mt-16 grid gap-8 sm:grid-cols-3 max-w-4xl">
      <div class="text-center">
        <div class="inline-block mb-4 w-[200px] h-[220px]">
          <ImageAbstractDNAFigure8 size="100%" intensity={0.9} rotationSpeed={0.25} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Core palette blend</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[200px] h-[220px]">
          <ImageAbstractDNAFigure8 size="100%" intensity={1.4} rotationSpeed={0.4} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">High-energy emphasis</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[200px] h-[220px]">
          <ImageAbstractDNAFigure8 size="100%" intensity={0.8} animate={false} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Static snapshot</p>
      </div>
    </div>
  </section>

  <section class="min-h-screen flex flex-col items-center justify-center px-6 py-20 bg-(--color-void)">
    <h2 class="text-3xl sm:text-4xl font-bold text-(--color-alabaster) mb-4">
      ImageAbstract--HumanBody--Particles
    </h2>
    <p class="text-(--color-lilac)/70 mb-12 text-center max-w-md">
      Particle-based human silhouette, inspired by the same Dark Matter flare language.
    </p>

    <div class="w-[min(80vw,520px)] h-[min(100vw,680px)]">
      <ImageAbstractHumanBody size="100%" />
    </div>

    <div class="mt-16 grid gap-8 sm:grid-cols-3 max-w-4xl">
      <div class="text-center">
        <div class="inline-block mb-4 w-[200px] h-[340px]">
          <ImageAbstractHumanBody size="100%" color="#f9fafb" rotationSpeed={0.3} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Soft alabaster</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[200px] h-[340px]">
          <ImageAbstractHumanBody size="100%" color="#9C85DF" rotationSpeed={0.4} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Lilac emphasis</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[200px] h-[340px]">
          <ImageAbstractHumanBody size="100%" color="#6643e2" animate={false} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Static silhouette</p>
      </div>
    </div>
  </section>

  <section class="min-h-screen flex flex-col items-center justify-center px-6 py-20 bg-(--color-void)">
    <h2 class="text-3xl sm:text-4xl font-bold text-(--color-alabaster) mb-4">
      ImageAbstract--HumanBody--SVG
    </h2>
    <p class="text-(--color-lilac)/70 mb-12 text-center max-w-md">
      Full-body particle silhouette using SVG path for precise human contours.
    </p>

    <div class="w-[min(80vw,480px)] h-[min(100vw,640px)]">
      <ImageAbstractHumanSVG size="100%" />
    </div>

    <div class="mt-16 grid gap-8 sm:grid-cols-3 max-w-4xl">
      <div class="text-center">
        <div class="inline-block mb-4 w-[180px] h-[300px]">
          <ImageAbstractHumanSVG size="100%" color="#f9fafb" rotationSpeed={0.3} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Soft alabaster</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[180px] h-[300px]">
          <ImageAbstractHumanSVG size="100%" color="#9C85DF" rotationSpeed={0.4} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Lilac emphasis</p>
      </div>

      <div class="text-center">
        <div class="inline-block mb-4 w-[180px] h-[300px]">
          <ImageAbstractHumanSVG size="100%" color="#6643e2" animate={false} />
        </div>
        <p class="text-sm text-(--color-alabaster)/60">Static silhouette</p>
      </div>
    </div>
  </section>
</BaseThemeLayout>
