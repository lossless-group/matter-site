                  <div class="mt-4 pt-4 border-t border-amber-500/10">
                    <p class="text-[10px] text-foreground/40 uppercase tracking-wide mb-2">Key Contacts</p>
                    <div class="space-y-1.5">
                      {company.listOfPeopleData.map((person) => (
                        <div class="flex items-center justify-between text-sm">
                          <span class="text-foreground/80">{person.name}</span>
                          <span class="text-foreground/40 text-xs">{person.role}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            ))}
          </div>
        </section>
      )}

