---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'The Global Aging Wave',
  subtitle = 'A demographic shift creating a multi-trillion dollar opportunity',
} = Astro.props;
---

<section data-transition="fade">
  <div class="slide-content ap-hero">
    <p class="ap-eyebrow">Why Now</p>
    <h2 class="ap-headline">{title}</h2>
    <p class="ap-subtitle">{subtitle}</p>

    <div class="ap-big-stat">
      <div class="ap-big-stat-number">2B</div>
      <div class="ap-big-stat-label">people over 60 by 2050</div>
      <div class="ap-big-stat-source">United Nations</div>
    </div>
  </div>
</section>

<style>
  .ap-hero {
    gap: 1.25rem;
  }

  .ap-eyebrow {
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: var(--color-lilac);
    opacity: 0.75;
    margin: 0;
  }

  .ap-headline {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.05;
    margin: 0;
    color: var(--color-alabaster);
    max-width: 60rem;
  }

  .ap-subtitle {
    font-size: clamp(1.05rem, 1.8vw, 1.5rem);
    margin: 0;
    color: var(--color-alabaster);
    opacity: 0.7;
    max-width: 48rem;
  }

  .ap-big-stat {
    margin-top: 2rem;
    text-align: center;
  }

  .ap-big-stat-number {
    font-size: clamp(3.5rem, 10vw, 7rem);
    font-weight: 900;
    line-height: 0.95;
    background: linear-gradient(135deg, var(--color-lilac), var(--color-marjorelle-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .ap-big-stat-label {
    margin-top: 0.75rem;
    font-size: clamp(1rem, 1.6vw, 1.4rem);
    font-weight: 600;
    color: var(--color-alabaster);
    opacity: 0.85;
  }

  .ap-big-stat-source {
    margin-top: 0.35rem;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-lilac);
    opacity: 0.55;
  }
</style>
