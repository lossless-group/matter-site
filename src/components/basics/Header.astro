---
// Minimal Dark Matter header with brand mark and mode toggle
import SiteBrandMarkModeWrapper from '../ui/SiteBrandMarkModeWrapper.astro';
import ModeToggle from '../ui/ModeToggle.astro';

export interface Props {
  siteTitle?: string;
  class?: string;
}

const {
  siteTitle = 'Dark Matter',
  class: className = '',
} = Astro.props as Props;
---

<header class={`sticky top-0 z-50 bg-background/80 backdrop-blur-sm border-b border-border/20 w-full ${className}`}>
  <div class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8">
    <div class="h-16 md:h-20 flex items-center justify-between gap-4">
      <a href="/" class="flex items-center gap-3" aria-label={siteTitle}>
        <div class="h-10 w-auto flex items-center">
          <SiteBrandMarkModeWrapper className="h-10 w-auto" />
        </div>
      </a>

      <div class="flex items-center gap-4">
        <nav class="hidden md:flex items-center gap-6 text-sm">
          <div class="explore-dropdown-wrapper">
            <button class="explore-trigger nav-link">
              Explore
              <svg class="inline-block w-3 h-3 ml-1 chevron-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
              <span class="nav-underline"></span>
            </button>
            <div class="explore-dropdown" role="menu" aria-label="Explore navigation">
              <a href="/thesis" role="menuitem" class="dropdown-item">
                <div class="item-title">Thesis</div>
                <div class="item-description">A market about to see explosive growth</div>
              </a>
              <a href="/strategy" role="menuitem" class="dropdown-item">
                <div class="item-title">Strategy</div>
                <div class="item-description">Our investment thesis and approach</div>
              </a>
              <a href="/slides" role="menuitem" class="dropdown-item">
                <div class="item-title">Slides</div>
                <div class="item-description">Presentations and pitch decks</div>
              </a>
            </div>
          </div>
          <a href="/portfolio" class="nav-link">Portfolio<span class="nav-underline"></span></a>
          <a href="/pipeline" class="nav-link">Pipeline<span class="nav-underline"></span></a>
          <a href="/team" class="nav-link">Team<span class="nav-underline"></span></a>
        </nav>

        <ModeToggle />

        <div class="flex items-center md:hidden">
          <button
            id="mobile-menu-button"
            type="button"
            class="inline-flex items-center justify-center rounded-md p-2 text-foreground/70 hover:bg-accent hover:text-foreground focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary"
            aria-label="Toggle menu"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <svg
              id="menu-open-icon"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              />
            </svg>
            <svg
              id="menu-close-icon"
              class="h-6 w-6 hidden"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="md:hidden hidden">
    <div class="space-y-1 bg-background pb-3 pt-2">
      <div class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8 flex flex-col items-end">
        <div class="mobile-explore-section w-full flex flex-col items-end">
          <span class="mobile-nav-item px-3 py-2 text-base font-medium text-foreground">Explore<span class="mobile-underline"></span></span>
          <div class="mobile-nested-links">
            <a href="/thesis" class="mobile-nested-item">Thesis<span class="mobile-underline-nested"></span></a>
            <a href="/strategy" class="mobile-nested-item">Strategy<span class="mobile-underline-nested"></span></a>
            <a href="/slides" class="mobile-nested-item">Slides<span class="mobile-underline-nested"></span></a>
          </div>
        </div>
        <a href="/portfolio" class="mobile-nav-item">Portfolio<span class="mobile-underline"></span></a>
        <a href="/pipeline" class="mobile-nav-item">Pipeline<span class="mobile-underline"></span></a>
        <a href="/team" class="mobile-nav-item">Team<span class="mobile-underline"></span></a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuOpenIcon = document.getElementById('menu-open-icon');
    const menuCloseIcon = document.getElementById('menu-close-icon');

    if (menuButton && mobileMenu && menuOpenIcon && menuCloseIcon) {
      menuButton.addEventListener('click', () => {
        const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
        menuButton.setAttribute('aria-expanded', String(!isExpanded));

        if (isExpanded) {
          mobileMenu.style.display = 'block';
          mobileMenu.classList.remove('mobile-menu-enter-active');
          mobileMenu.classList.add('mobile-menu-leave');

          setTimeout(() => {
            mobileMenu.classList.remove('mobile-menu-leave');
            mobileMenu.classList.remove('mobile-menu-leave-active');
            mobileMenu.style.display = 'none';
          }, 75);
        } else {
          mobileMenu.style.display = 'block';
          mobileMenu.classList.add('mobile-menu-enter');
          setTimeout(() => {
            mobileMenu.classList.remove('mobile-menu-enter');
            mobileMenu.classList.add('mobile-menu-enter-active');
          }, 10);
        }

        menuOpenIcon.classList.toggle('hidden');
        menuCloseIcon.classList.toggle('hidden');
        document.body.classList.toggle('menu-open');
      });

      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.style.display = 'none';
          menuButton.setAttribute('aria-expanded', 'false');
          menuOpenIcon.classList.remove('hidden');
          menuCloseIcon.classList.add('hidden');
          document.body.classList.remove('menu-open');
        });
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && mobileMenu.style.display === 'block') {
          mobileMenu.style.display = 'none';
          menuButton.setAttribute('aria-expanded', 'false');
          menuOpenIcon.classList.remove('hidden');
          menuCloseIcon.classList.add('hidden');
          document.body.classList.remove('menu-open');
        }
      });
    }
  });
</script>

<style>
  /* Desktop Nav Link Styles with Animated Underline */
  .nav-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 0;
    color: var(--color-muted-foreground, rgba(235, 235, 235, 0.7));
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    overflow: hidden;
  }

  .nav-link:hover {
    color: var(--color-foreground, rgb(235 235 235));
  }

  .nav-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg,
      #3b9ea0 0%,
      #69e2e3 50%,
      #3b9ea0 100%
    );
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 1px;
  }

  .nav-link:hover .nav-underline {
    transform: translateX(-100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .chevron-icon {
    transition: transform 0.2s ease;
  }

  .explore-dropdown-wrapper:hover .chevron-icon {
    transform: rotate(180deg);
  }

  /* Explore Dropdown Styles */
  .explore-dropdown-wrapper {
    position: relative;
  }

  .explore-trigger {
    background: transparent;
    border: none;
    color: inherit;
    font: inherit;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
  }

  .explore-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    transform: translateX(-15%) translateY(12px);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    background: var(--color-background, rgb(29 35 64));
    border: 1px solid var(--color-border, rgba(255, 255, 255, 0.1));
    border-radius: 0.75rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    min-width: 280px;
    padding: 0.75rem;
    z-index: 100;
  }

  /* Arrow/pointer pointing up - aligns with the chevron */
  .explore-dropdown::before {
    content: '';
    position: absolute;
    top: -8px;
    left: 33%;
    width: 14px;
    height: 14px;
    background: var(--color-background, rgb(29 35 64));
    border-left: 1px solid var(--color-border, rgba(255, 255, 255, 0.1));
    border-top: 1px solid var(--color-border, rgba(255, 255, 255, 0.1));
    transform: rotate(45deg);
    border-radius: 2px 0 0 0;
  }

  .explore-dropdown-wrapper:hover .explore-dropdown,
  .explore-dropdown-wrapper:focus-within .explore-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-15%) translateY(4px);
  }

  /* Light mode dropdown */
  :global([data-mode="light"]) .explore-dropdown {
    background: rgba(255, 255, 255, 0.98);
    border-color: rgba(0, 0, 0, 0.08);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
  }

  :global([data-mode="light"]) .explore-dropdown::before {
    background: rgba(255, 255, 255, 0.98);
    border-left-color: rgba(0, 0, 0, 0.08);
    border-top-color: rgba(0, 0, 0, 0.08);
  }

  /* Dark mode dropdown - deep void background */
  :global([data-mode="dark"]) .explore-dropdown {
    background: linear-gradient(135deg, rgba(15, 9, 35, 0.98), rgba(20, 12, 45, 0.98));
    border-color: rgba(156, 133, 223, 0.25);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5), 0 0 20px rgba(156, 133, 223, 0.08);
  }

  :global([data-mode="dark"]) .explore-dropdown::before {
    background: rgba(15, 9, 35, 0.98);
    border-left-color: rgba(156, 133, 223, 0.25);
    border-top-color: rgba(156, 133, 223, 0.25);
  }

  /* Vibrant mode dropdown - intense with glows */
  :global([data-mode="vibrant"]) .explore-dropdown {
    background: linear-gradient(135deg, rgba(10, 5, 25, 0.98), rgba(20, 8, 45, 0.98));
    border-color: rgba(102, 67, 226, 0.4);
    box-shadow:
      0 10px 40px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(102, 67, 226, 0.2),
      inset 0 0 30px rgba(102, 67, 226, 0.05);
  }

  :global([data-mode="vibrant"]) .explore-dropdown::before {
    background: rgba(10, 5, 25, 0.98);
    border-left-color: rgba(102, 67, 226, 0.4);
    border-top-color: rgba(102, 67, 226, 0.4);
  }

  .explore-dropdown .dropdown-item {
    display: block;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-foreground, rgb(235 235 235));
    transition: background-color 0.15s ease, border-color 0.15s ease;
    border: 1px solid transparent;
  }

  .explore-dropdown .dropdown-item:hover {
    background: rgba(156, 133, 223, 0.1);
    border-color: rgba(156, 133, 223, 0.2);
  }

  .explore-dropdown .item-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--color-foreground, rgb(235 235 235));
    transition: color 0.15s ease;
  }

  .explore-dropdown .dropdown-item:hover .item-title {
    color: var(--color-lilac, #9C85DF);
  }

  .explore-dropdown .item-description {
    font-size: 0.75rem;
    opacity: 0.7;
    line-height: 1.4;
  }

  /* Light mode dropdown items */
  :global([data-mode="light"]) .explore-dropdown .dropdown-item:hover {
    background: rgba(108, 99, 255, 0.06);
    border-color: rgba(108, 99, 255, 0.15);
  }

  :global([data-mode="light"]) .explore-dropdown .dropdown-item:hover .item-title {
    color: var(--color-marjorelle-purple, #6643e2);
  }

  /* Dark mode dropdown items */
  :global([data-mode="dark"]) .explore-dropdown .dropdown-item:hover {
    background: rgba(156, 133, 223, 0.15);
    border-color: rgba(156, 133, 223, 0.35);
    box-shadow: 0 0 20px rgba(156, 133, 223, 0.1);
  }

  :global([data-mode="dark"]) .explore-dropdown .dropdown-item:hover .item-title {
    color: var(--color-lilac, #9C85DF);
    text-shadow: 0 0 8px rgba(156, 133, 223, 0.3);
  }

  /* Vibrant mode dropdown items */
  :global([data-mode="vibrant"]) .explore-dropdown .dropdown-item:hover {
    background: linear-gradient(135deg, rgba(102, 67, 226, 0.2), rgba(156, 133, 223, 0.15));
    border-color: rgba(102, 67, 226, 0.5);
    box-shadow: 0 0 25px rgba(102, 67, 226, 0.2), inset 0 0 15px rgba(102, 67, 226, 0.05);
  }

  :global([data-mode="vibrant"]) .explore-dropdown .dropdown-item:hover .item-title {
    color: #CDC4ED;
    text-shadow: 0 0 15px rgba(156, 133, 223, 0.6);
  }

  /* Mobile nav item styles with static underline */
  .mobile-nav-item {
    position: relative;
    display: inline-flex;
    justify-content: flex-end;
    width: fit-content;
    padding: 0.5rem 0.75rem;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    color: var(--color-foreground, rgb(235 235 235));
  }

  .mobile-underline {
    position: absolute;
    bottom: 0.25rem;
    left: 0.75rem;
    right: 0.75rem;
    height: 2px;
    background: linear-gradient(90deg,
      #3b9ea0 0%,
      #69e2e3 50%,
      #3b9ea0 100%
    );
    border-radius: 1px;
    opacity: 0.6;
  }

  /* Mobile nested menu styles */
  .mobile-nested-links {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin-right: 0.75rem;
    padding-right: 1rem;
    margin-bottom: 0.5rem;
  }

  .mobile-nested-links::after {
    content: '';
    position: absolute;
    right: 0;
    top: 0.5rem;
    bottom: 0.375rem;
    width: 2px;
    background: linear-gradient(180deg,
      rgba(156, 133, 223, 0.5) 0%,
      rgba(156, 133, 223, 0.3) 100%
    );
    border-radius: 1px;
  }

  .mobile-nested-item {
    position: relative;
    display: inline-flex;
    justify-content: flex-end;
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    color: var(--color-muted-foreground, rgba(235, 235, 235, 0.7));
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.15s ease, color 0.15s ease;
  }

  .mobile-underline-nested {
    position: absolute;
    bottom: 0.125rem;
    left: 0.75rem;
    right: 0.75rem;
    height: 1px;
    background: linear-gradient(90deg,
      #3b9ea0 0%,
      #69e2e3 50%,
      #3b9ea0 100%
    );
    border-radius: 1px;
    opacity: 0.4;
  }

  .mobile-nested-item:hover {
    background: rgba(156, 133, 223, 0.15);
    color: var(--color-lilac, #9C85DF);
  }

  .mobile-nested-item:hover .mobile-underline-nested {
    opacity: 0.8;
  }

  /* Mobile menu styles */
  .mobile-menu-enter {
    opacity: 0;
    transform: scale(0.95);
  }
  .mobile-menu-enter-active {
    opacity: 1;
    transform: scale(1);
    transition: opacity 100ms ease-out, transform 100ms ease-out;
  }
  .mobile-menu-leave {
    opacity: 1;
    transform: scale(1);
  }
  .mobile-menu-leave-active {
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 75ms ease-in, transform 75ms ease-in;
  }

  @media (max-width: 767px) {
    body.menu-open {
      overflow: hidden;
    }
  }
</style>
