---
/**
 * Sources Component
 *
 * Renders a "Sources" section at the bottom of a page listing all citations
 * in sequential order with links to original sources.
 *
 * Supports light/dark/vibrant modes via CSS custom properties.
 */

import type { IndexedCitation } from '@lib/citations/types';

interface Props {
  /** Array of indexed citations to display */
  citations: IndexedCitation[];
  /** Section title (default: "Sources") */
  title?: string;
}

const { citations, title = 'Sources' } = Astro.props;

// Sort by index to ensure correct order
const sortedCitations = [...citations].sort((a, b) => a.index - b.index);

// Extract domain from URL for display
const getDomain = (url: string): string => {
  try {
    return new URL(url).hostname.replace('www.', '');
  } catch {
    return url;
  }
};
---

{sortedCitations.length > 0 && (
  <section class="sources-section">
    <h2 class="sources-title">{title}</h2>
    <ol class="sources-list">
      {sortedCitations.map((citation) => (
        <li class="source-item" id={`source-${citation.hexCode}`}>
          <span class="source-index">[{citation.index}]</span>
          <div class="source-content">
            <a
              href={citation.url}
              target="_blank"
              rel="noopener noreferrer"
              class="source-link"
            >
              <span class="source-title">{citation.title}</span>
              <svg class="source-icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                <polyline points="15 3 21 3 21 9"></polyline>
                <line x1="10" y1="14" x2="21" y2="3"></line>
              </svg>
            </a>
            <div class="source-meta">
              <span class="source-publication">
                {citation.source || getDomain(citation.url)}
              </span>
              {citation.publishedDate && (
                <>
                  <span class="source-separator">â€¢</span>
                  <span class="source-date">{citation.publishedDate}</span>
                </>
              )}
            </div>
          </div>
        </li>
      ))}
    </ol>
  </section>
)}

<style>
  .sources-section {
    margin-top: 4rem;
    padding: 2rem;
    border-radius: 1rem;
  }

  .sources-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .sources-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .source-item {
    display: flex;
    gap: 0.75rem;
    font-size: 0.875rem;
    line-height: 1.5;
    padding: 0.75rem;
    border-radius: 0.5rem;
    transition: background 0.2s ease;
  }

  .source-index {
    flex-shrink: 0;
    font-weight: 600;
    min-width: 2rem;
    font-variant-numeric: tabular-nums;
  }

  .source-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 0; /* Allow text truncation */
  }

  .source-link {
    display: inline-flex;
    align-items: flex-start;
    gap: 0.5rem;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .source-link:hover {
    text-decoration: underline;
  }

  .source-title {
    font-weight: 500;
  }

  .source-icon {
    flex-shrink: 0;
    margin-top: 0.25rem;
    opacity: 0;
    transition: opacity 0.15s ease;
  }

  .source-link:hover .source-icon {
    opacity: 1;
  }

  .source-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
  }

  .source-publication {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .source-separator {
    opacity: 0.5;
  }

  .source-date {
    font-variant-numeric: tabular-nums;
  }

  /* ==========================================================================
     LIGHT MODE
     ========================================================================== */
  :global([data-mode="light"]) .sources-section {
    background: rgba(108, 99, 255, 0.03);
    border: 1px solid rgba(108, 99, 255, 0.1);
  }

  :global([data-mode="light"]) .sources-title {
    color: var(--color-marjorelle-purple);
  }

  :global([data-mode="light"]) .source-item:hover {
    background: rgba(108, 99, 255, 0.05);
  }

  :global([data-mode="light"]) .source-index {
    color: var(--color-marjorelle-purple);
  }

  :global([data-mode="light"]) .source-link {
    color: var(--color-foreground);
  }

  :global([data-mode="light"]) .source-link:hover {
    color: var(--color-marjorelle-purple);
  }

  :global([data-mode="light"]) .source-publication {
    color: var(--color-marjorelle-purple);
    opacity: 0.8;
  }

  :global([data-mode="light"]) .source-date {
    color: var(--color-foreground);
    opacity: 0.5;
  }

  /* ==========================================================================
     DARK MODE
     ========================================================================== */
  :global([data-mode="dark"]) .sources-section {
    background: rgba(156, 133, 223, 0.03);
    border: 1px solid rgba(156, 133, 223, 0.15);
  }

  :global([data-mode="dark"]) .sources-title {
    color: var(--color-lilac);
  }

  :global([data-mode="dark"]) .source-item:hover {
    background: rgba(156, 133, 223, 0.05);
  }

  :global([data-mode="dark"]) .source-index {
    color: var(--color-lilac);
  }

  :global([data-mode="dark"]) .source-link {
    color: var(--color-alabaster);
  }

  :global([data-mode="dark"]) .source-link:hover {
    color: var(--color-lilac);
  }

  :global([data-mode="dark"]) .source-publication {
    color: var(--color-lilac);
    opacity: 0.8;
  }

  :global([data-mode="dark"]) .source-date {
    color: var(--color-alabaster);
    opacity: 0.5;
  }

  /* ==========================================================================
     VIBRANT MODE
     ========================================================================== */
  :global([data-mode="vibrant"]) .sources-section {
    background: linear-gradient(135deg, rgba(156, 133, 223, 0.05), rgba(102, 67, 226, 0.03));
    border: 1px solid rgba(156, 133, 223, 0.2);
    box-shadow: inset 0 0 30px rgba(102, 67, 226, 0.05);
  }

  :global([data-mode="vibrant"]) .sources-title {
    color: var(--color-lilac);
    text-shadow: 0 0 20px var(--color-lilac);
  }

  :global([data-mode="vibrant"]) .source-item:hover {
    background: rgba(156, 133, 223, 0.08);
  }

  :global([data-mode="vibrant"]) .source-index {
    color: var(--color-lilac);
    text-shadow: 0 0 10px var(--color-lilac);
  }

  :global([data-mode="vibrant"]) .source-link {
    color: var(--color-alabaster);
  }

  :global([data-mode="vibrant"]) .source-link:hover {
    color: var(--color-lilac);
    text-shadow: 0 0 10px var(--color-lilac);
  }

  :global([data-mode="vibrant"]) .source-publication {
    color: var(--color-lilac);
  }

  :global([data-mode="vibrant"]) .source-date {
    color: var(--color-alabaster);
    opacity: 0.6;
  }
</style>
