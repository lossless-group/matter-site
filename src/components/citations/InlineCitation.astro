---
/**
 * InlineCitation Component
 *
 * Renders an inline citation marker [n] with a hover popover showing
 * the source title, publication, and link to the original.
 *
 * Supports light/dark/vibrant modes via CSS custom properties.
 */

interface Props {
  /** Sequential index for display (e.g., 1, 2, 3) */
  index: number;
  /** Hex code identifier for the citation */
  hexCode: string;
  /** Title of the source */
  title: string;
  /** URL to the source */
  url: string;
  /** Publication name or domain */
  source?: string;
  /** Published date for display */
  publishedDate?: string;
}

const { index, hexCode, title, url, source, publishedDate } = Astro.props;

// Extract domain from URL if no source provided
const displaySource = source || new URL(url).hostname.replace('www.', '');
---

<span class="citation-wrapper" data-hex={hexCode}>
  <sup class="citation-marker" tabindex="0" role="button" aria-describedby={`popover-${hexCode}`}>
    [{index}]
  </sup>
  <div class="citation-popover" id={`popover-${hexCode}`} role="tooltip">
    <div class="popover-arrow"></div>
    <div class="popover-content">
      <p class="popover-title">{title}</p>
      <p class="popover-source">{displaySource}</p>
      {publishedDate && <p class="popover-date">{publishedDate}</p>}
      <a href={url} target="_blank" rel="noopener noreferrer" class="popover-link">
        <span>View Source</span>
        <svg class="popover-link-icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
      </a>
    </div>
  </div>
</span>

<style>
  .citation-wrapper {
    position: relative;
    display: inline;
  }

  .citation-marker {
    cursor: help;
    font-weight: 600;
    font-size: 0.75em;
    padding: 0 0.1em;
    border-radius: 2px;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .citation-marker:focus {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }

  .citation-popover {
    position: absolute;
    bottom: calc(100% + 8px);
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease, transform 0.2s ease;
    z-index: 1000;
    pointer-events: none;
    transform-origin: bottom center;
  }

  .citation-wrapper:hover .citation-popover,
  .citation-wrapper:focus-within .citation-popover {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    transform: translateX(-50%) translateY(0);
  }

  .popover-arrow {
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    z-index: -1;
  }

  .popover-content {
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    min-width: 220px;
    max-width: 320px;
    text-align: left;
  }

  .popover-title {
    font-size: 0.8125rem;
    font-weight: 500;
    line-height: 1.4;
    margin: 0 0 0.375rem 0;
  }

  .popover-source {
    font-size: 0.6875rem;
    margin: 0 0 0.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .popover-date {
    font-size: 0.6875rem;
    margin: 0 0 0.5rem 0;
  }

  .popover-link {
    font-size: 0.75rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0;
    transition: all 0.15s ease;
  }

  .popover-link:hover {
    text-decoration: underline;
  }

  .popover-link-icon {
    flex-shrink: 0;
  }

  /* ==========================================================================
     LIGHT MODE
     ========================================================================== */
  :global([data-mode="light"]) .citation-marker {
    color: var(--color-marjorelle-purple);
    background: rgba(108, 99, 255, 0.1);
  }

  :global([data-mode="light"]) .citation-marker:hover {
    color: var(--color-marjorelle-purple);
    background: rgba(108, 99, 255, 0.2);
  }

  :global([data-mode="light"]) .popover-content {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12), 0 0 1px rgba(0, 0, 0, 0.1);
  }

  :global([data-mode="light"]) .popover-arrow {
    background: white;
    border-right: 1px solid rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  :global([data-mode="light"]) .popover-title {
    color: var(--color-foreground);
  }

  :global([data-mode="light"]) .popover-source {
    color: var(--color-marjorelle-purple);
    opacity: 0.8;
  }

  :global([data-mode="light"]) .popover-date {
    color: var(--color-foreground);
    opacity: 0.5;
  }

  :global([data-mode="light"]) .popover-link {
    color: var(--color-marjorelle-purple);
  }

  /* ==========================================================================
     DARK MODE
     ========================================================================== */
  :global([data-mode="dark"]) .citation-marker {
    color: var(--color-lilac);
    background: rgba(156, 133, 223, 0.15);
  }

  :global([data-mode="dark"]) .citation-marker:hover {
    color: var(--color-lilac);
    background: rgba(156, 133, 223, 0.25);
  }

  :global([data-mode="dark"]) .popover-content {
    background: rgba(15, 9, 35, 0.98);
    border: 1px solid rgba(156, 133, 223, 0.25);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.4), 0 0 1px rgba(156, 133, 223, 0.3);
  }

  :global([data-mode="dark"]) .popover-arrow {
    background: rgba(15, 9, 35, 0.98);
    border-right: 1px solid rgba(156, 133, 223, 0.25);
    border-bottom: 1px solid rgba(156, 133, 223, 0.25);
  }

  :global([data-mode="dark"]) .popover-title {
    color: var(--color-alabaster);
  }

  :global([data-mode="dark"]) .popover-source {
    color: var(--color-lilac);
    opacity: 0.8;
  }

  :global([data-mode="dark"]) .popover-date {
    color: var(--color-alabaster);
    opacity: 0.5;
  }

  :global([data-mode="dark"]) .popover-link {
    color: var(--color-lilac);
  }

  /* ==========================================================================
     VIBRANT MODE
     ========================================================================== */
  :global([data-mode="vibrant"]) .citation-marker {
    color: var(--color-lilac);
    background: rgba(156, 133, 223, 0.2);
    text-shadow: 0 0 10px rgba(156, 133, 223, 0.5);
  }

  :global([data-mode="vibrant"]) .citation-marker:hover {
    color: var(--color-lilac);
    background: rgba(156, 133, 223, 0.3);
    box-shadow: 0 0 15px rgba(156, 133, 223, 0.3);
  }

  :global([data-mode="vibrant"]) .popover-content {
    background: linear-gradient(135deg, rgba(15, 9, 35, 0.98), rgba(26, 10, 53, 0.95));
    border: 1px solid rgba(156, 133, 223, 0.4);
    box-shadow: 0 4px 40px rgba(102, 67, 226, 0.3), 0 0 1px rgba(156, 133, 223, 0.5), inset 0 0 20px rgba(102, 67, 226, 0.05);
  }

  :global([data-mode="vibrant"]) .popover-arrow {
    background: rgba(15, 9, 35, 0.98);
    border-right: 1px solid rgba(156, 133, 223, 0.4);
    border-bottom: 1px solid rgba(156, 133, 223, 0.4);
  }

  :global([data-mode="vibrant"]) .popover-title {
    color: var(--color-alabaster);
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
  }

  :global([data-mode="vibrant"]) .popover-source {
    color: var(--color-lilac);
    text-shadow: 0 0 10px var(--color-lilac);
  }

  :global([data-mode="vibrant"]) .popover-date {
    color: var(--color-alabaster);
    opacity: 0.6;
  }

  :global([data-mode="vibrant"]) .popover-link {
    color: var(--color-lilac);
    text-shadow: 0 0 10px var(--color-lilac);
  }

  :global([data-mode="vibrant"]) .popover-link:hover {
    filter: drop-shadow(0 0 5px var(--color-lilac));
  }
</style>
