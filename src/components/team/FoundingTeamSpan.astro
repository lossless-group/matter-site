---
import PersonCard from './PersonCard.astro';
import type { TeamMember } from '../../types/team';
import '../../styles/team-spans.css';

interface Props {
  members: TeamMember[];
}

const { members } = Astro.props as Props;
---

<div class="team-span">
  <h1 class="role-header">Founding Team</h1>
  <div class="person-cards">
    {members.map((member) => (
      <PersonCard {...member} />
    ))}
  </div>
</div>
