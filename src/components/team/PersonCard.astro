---
import SocialIcons from '../ui/SocialIcons.astro';

type SocialPlatform = 'twitter' | 'facebook' | 'instagram' | 'linkedin' | 'youtube' | 'medium' | 'x';

interface PersonProps {
  name: string;
  role: string;
  image: string;
  bio: string;
  socialLinks?: Array<{
    name: string;
    href: string;
  }>;
  class?: string;
  maxWords?: number;
  showBio?: boolean;
}

const {
  name,
  role,
  image,
  bio,
  socialLinks = [],
  class: className = '',
  maxWords = 20,
  showBio = true,
} = Astro.props as PersonProps;

const truncateText = (text: string, words: number) => {
  const wordArray = text.split(' ');
  if (wordArray.length <= words) return { text, isTruncated: false };
  return {
    text: wordArray.slice(0, words).join(' ') + '...',
    isTruncated: true,
  };
};

const truncatedBio = truncateText(bio, maxWords);

const mappedSocialLinks = socialLinks.map((link) => ({
  name: link.name,
  href: link.href,
  icon: link.name.toLowerCase() as SocialPlatform,
}));
---

<article class={`bg-background/40 backdrop-blur-xl rounded-3xl overflow-hidden border border-border/40 shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1 flex flex-col max-w-sm mx-auto group ${className}`}>
  <div class="relative aspect-square overflow-hidden">
    <img
      src={image}
      alt={`Portrait of ${name}`}
      class="w-full h-full object-cover transition-all duration-300 group-hover:scale-105"
      loading="lazy"
      width="400"
      height="400"
    />
  </div>

  <div class="p-6 flex flex-col">
    <div class="mb-3">
      <h3 class="text-lg font-semibold text-foreground text-center group-hover:text-foreground/90 transition-colors duration-300">{name}</h3>
      <p class="text-sm text-foreground/70 text-center mt-1 group-hover:text-foreground/80 transition-colors duration-300">{role}</p>
    </div>

    {showBio && (
      <div class="overflow-hidden">
        <p class="text-sm leading-relaxed text-foreground/80 text-center line-clamp-4" id={`bio-${name.toLowerCase().replace(/\s+/g, '-')}`}>
          {truncatedBio.text}
        </p>
      </div>
    )}

    {mappedSocialLinks.length > 0 && (
      <div class="mt-4 pt-4 border-t border-border/30 group-hover:border-border/60 transition-colors duration-300">
        <SocialIcons
          socialLinks={mappedSocialLinks}
          iconSize="sm"
          className="justify-center space-x-3"
        />
      </div>
    )}
  </div>
</article>
