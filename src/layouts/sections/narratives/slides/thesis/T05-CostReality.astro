---
/**
 * Thesis Section 5: Cost Reality - Medical Inflation
 * Structural healthcare cost drivers with inline citations
 */
import InlineCitation from '@components/citations/InlineCitation.astro';

interface Props {
  id?: string;
}

const { id = 'cost-reality' } = Astro.props;

// Citation data for cost statistics
const citations = {
  retiree: { index: 1, hexCode: '67utob', title: 'Fidelity Investments® Releases 2025 Retiree Health Care Cost Estimate', url: 'https://newsroom.fidelity.com/pressreleases/fidelity-investments--releases-2025-retiree-health-care-cost-estimate--a-timely-reminder-for-all-gen/s/3c62e988-12e2-4dc8-afb4-f44b06c6d52e', source: 'Fidelity Investments', publishedDate: '2025-07-30' },
  annual: { index: 2, hexCode: 'qg3qsq', title: '2025 Healthcare Cost Outlook | Drivers & Trend Insights', url: 'https://www.bbrown.com/us/insight/2025-healthcare-cost-outlook-drivers-trend-insights/', source: 'Brown & Brown', publishedDate: '2024-10-28' },
  multiplier: { index: 3, hexCode: 'alyqs4', title: 'Key Drivers of 2025 Health Care Cost Increases', url: 'https://parrottbenefitgroup.com/key-drivers-of-2025-health-care-cost-increases/', source: 'Parrott Benefit Group', publishedDate: '2024-11-22' },
};
---

<section class="slide slide-cost-reality" id={id}>
  <div class="slide-gradient slide-gradient-red"></div>
  <div class="slide-content">
    <span class="badge badge-red reveal-item" data-reveal="fade-up" style="--delay: 0ms;">Cost Reality</span>
    <h2 class="section-title-centered reveal-item" data-reveal="fade-up" style="--delay: 100ms;">Structural, Compounding Medical Inflation</h2>
    <p class="section-subtitle reveal-item" data-reveal="fade-up" style="--delay: 200ms;">Without interventions that alter the trajectory of age-related disease, cost curves remain exponential</p>
    <div class="cost-grid">
      <div class="cost-card reveal-item" data-reveal="fade-up" style="--delay: 300ms;">
        <span class="cost-number">$172,500</span>
        <span class="cost-label">Per Retiree</span>
        <p>Average healthcare cost during retirement, more than doubled since 2002.<InlineCitation {...citations.retiree} /></p>
      </div>
      <div class="cost-card reveal-item" data-reveal="fade-up" style="--delay: 400ms;">
        <span class="cost-number">7-8%</span>
        <span class="cost-label">Annual Increase</span>
        <p>Expected healthcare cost growth for US employers in 2025.<InlineCitation {...citations.annual} /></p>
      </div>
      <div class="cost-card reveal-item" data-reveal="fade-up" style="--delay: 500ms;">
        <span class="cost-number">2.5×</span>
        <span class="cost-label">vs Working Age</span>
        <p>Per-capita spending for 65+ compared to working-age adults.<InlineCitation {...citations.multiplier} /></p>
      </div>
    </div>
  </div>
</section>

<style>
  .section-subtitle {
    text-align: center;
    max-width: 40rem;
    margin: 0 auto 2rem;
    font-size: 1rem;
    line-height: 1.6;
  }

  .cost-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .cost-grid {
      grid-template-columns: 1fr;
    }
  }

  .cost-card {
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
  }

  .cost-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .cost-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  .cost-card p {
    font-size: 0.875rem;
    line-height: 1.5;
  }

  :global([data-mode="dark"]) .section-subtitle {
    color: rgba(249, 250, 251, 0.7);
  }

  :global([data-mode="dark"]) .cost-card {
    background: rgba(15, 9, 35, 0.8);
    border: 1px solid rgba(108, 99, 255, 0.15);
  }

  :global([data-mode="dark"]) .cost-number {
    color: #f87171;
  }

  :global([data-mode="dark"]) .cost-label {
    color: var(--color-alabaster);
  }

  :global([data-mode="dark"]) .cost-card p {
    color: rgba(249, 250, 251, 0.6);
  }
</style>
