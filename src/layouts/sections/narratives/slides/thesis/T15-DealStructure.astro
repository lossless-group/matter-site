---
/**
 * Thesis Section 15: Deal Structure Example
 * Pharma-Senolytics acquisition model
 */
interface Props {
  id?: string;
}

const { id = 'deal-structure' } = Astro.props;
---

<section class="slide slide-deal" id={id}>
  <div class="slide-gradient"></div>
  <div class="slide-content">
    <span class="badge badge-amber reveal-item" data-reveal="fade-up" style="--delay: 0ms;">Deal Structure</span>
    <h2 class="section-title-centered reveal-item" data-reveal="fade-up" style="--delay: 100ms;">Example Deal Structure</h2>
    <p class="section-subtitle reveal-item" data-reveal="fade-up" style="--delay: 200ms;">Pharma–Senolytics Acquisition Model</p>
    <div class="deal-grid">
      <div class="deal-rationale reveal-item" data-reveal="slide-right" style="--delay: 300ms;">
        <h3>Strategic Rationale</h3>
        <ul>
          <li>Large pharma seeking next-generation assets that modify fundamental aging biology</li>
          <li>Senolytics address shared mechanisms across multiple age-related diseases</li>
          <li>One asset with potential across several multi-billion-dollar indications</li>
        </ul>
      </div>
      <div class="deal-terms reveal-item" data-reveal="slide-left" style="--delay: 400ms;">
        <h3>Illustrative Terms</h3>
        <dl>
          <div class="term-row">
            <dt>Target</dt>
            <dd>Clinical-stage senolytics company</dd>
          </div>
          <div class="term-row">
            <dt>Buyer</dt>
            <dd>Top-10 global pharma</dd>
          </div>
          <div class="term-row">
            <dt>Upfront</dt>
            <dd>$500M–$1B cash</dd>
          </div>
          <div class="term-row">
            <dt>Biobucks</dt>
            <dd>$2B–$4B milestones</dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</section>

<style>
  .section-subtitle {
    text-align: center;
    max-width: 40rem;
    margin: 0 auto 2rem;
    font-size: 1rem;
    line-height: 1.6;
  }

  .deal-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .deal-grid {
      grid-template-columns: 1fr;
    }
  }

  .deal-rationale,
  .deal-terms {
    padding: 2rem;
    border-radius: 1rem;
  }

  .deal-rationale h3,
  .deal-terms h3 {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .deal-rationale ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .deal-rationale li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .deal-rationale li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 0.375rem;
    height: 0.375rem;
    border-radius: 50%;
  }

  .deal-terms dl {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .term-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid;
  }

  .term-row dt {
    font-size: 0.875rem;
  }

  .term-row dd {
    font-size: 0.875rem;
    font-weight: 700;
    text-align: right;
  }

  :global([data-mode="dark"]) .section-subtitle {
    color: rgba(249, 250, 251, 0.7);
  }

  :global([data-mode="dark"]) .deal-rationale,
  :global([data-mode="dark"]) .deal-terms {
    background: rgba(15, 9, 35, 0.8);
    border: 1px solid rgba(251, 191, 36, 0.2);
  }

  :global([data-mode="dark"]) .deal-rationale h3,
  :global([data-mode="dark"]) .deal-terms h3 {
    color: var(--color-alabaster);
  }

  :global([data-mode="dark"]) .deal-rationale li {
    color: rgba(249, 250, 251, 0.7);
  }

  :global([data-mode="dark"]) .deal-rationale li::before {
    background: #fbbf24;
  }

  :global([data-mode="dark"]) .term-row {
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-mode="dark"]) .term-row dt {
    color: rgba(249, 250, 251, 0.7);
  }

  :global([data-mode="dark"]) .term-row dd {
    color: #fbbf24;
  }
</style>
