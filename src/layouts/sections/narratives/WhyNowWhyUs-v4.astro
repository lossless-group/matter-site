---
/**
 * VARIANT 4: "Orbital Cosmos"
 *
 * A dramatic, immersive hero inspired by Dark Matter's cosmic branding.
 * Features:
 * - Full-bleed dark gradient with animated orbital rings
 * - Central "nucleus" focal point with the core message
 * - Floating data points that orbit around the center
 * - Minimal text, maximum visual impact
 * - Hover interactions reveal depth
 */

interface Props {
  tagline?: string;
  headline?: string;
}

const {
  tagline = "Investing at the edge of what's knowable",
  headline = 'Dark Matter',
} = Astro.props as Props;
---

<section class="orbital-hero relative min-h-screen w-full overflow-hidden bg-(--color-void)">
  <!-- Animated orbital rings -->
  <div class="orbital-system absolute inset-0 flex items-center justify-center">
    <div class="orbit orbit-1"></div>
    <div class="orbit orbit-2"></div>
    <div class="orbit orbit-3"></div>

    <!-- Floating orbital nodes -->
    <div class="orbital-node node-1" data-label="Bioscience">
      <span class="node-pulse"></span>
    </div>
    <div class="orbital-node node-2" data-label="Data">
      <span class="node-pulse"></span>
    </div>
    <div class="orbital-node node-3" data-label="Longevity">
      <span class="node-pulse"></span>
    </div>
    <div class="orbital-node node-4" data-label="Founders">
      <span class="node-pulse"></span>
    </div>
  </div>

  <!-- Central nucleus - the core message -->
  <div class="nucleus absolute inset-0 flex flex-col items-center justify-center z-10 px-6">
    <div class="nucleus-glow"></div>

    <h1 class="nucleus-title text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-bold tracking-tight text-center">
      <span class="block text-transparent bg-clip-text bg-linear-to-b from-(--color-alabaster) via-(--color-lilac) to-(--color-marjorelle-purple)">
        {headline}
      </span>
    </h1>

    <p class="nucleus-tagline mt-6 text-lg sm:text-xl md:text-2xl text-(--color-lilac)/80 text-center max-w-2xl font-light tracking-wide">
      {tagline}
    </p>

    <div class="mt-12 flex flex-col sm:flex-row gap-4 items-center">
      <a href="#thesis" class="nucleus-cta group relative px-8 py-4 text-sm uppercase tracking-[0.25em] text-(--color-alabaster) border border-(--color-lilac)/40 rounded-full overflow-hidden transition-all duration-500 hover:border-(--color-marjorelle-purple)">
        <span class="relative z-10">Explore Our Thesis</span>
        <span class="absolute inset-0 bg-gradient-to-r from-(--color-marjorelle-purple)/0 via-(--color-marjorelle-purple)/20 to-(--color-marjorelle-purple)/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></span>
      </a>
    </div>
  </div>

  <!-- Bottom fade hint -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-(--color-void) to-transparent z-20"></div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-30 flex flex-col items-center gap-2 text-(--color-lilac)/60">
    <span class="text-xs uppercase tracking-[0.3em]">Scroll</span>
    <div class="scroll-line w-px h-8 bg-gradient-to-b from-(--color-lilac)/60 to-transparent"></div>
  </div>
</section>

<style>
  .orbital-hero {
    background:
      radial-gradient(ellipse 80% 50% at 50% 50%, rgba(102, 67, 226, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 20% 80%, rgba(156, 133, 223, 0.08) 0%, transparent 30%),
      radial-gradient(circle at 80% 20%, rgba(102, 67, 226, 0.08) 0%, transparent 30%),
      var(--color-void);
  }

  /* Orbital rings */
  .orbit {
    position: absolute;
    border: 1px solid rgba(156, 133, 223, 0.15);
    border-radius: 50%;
    animation: orbit-rotate 60s linear infinite;
  }

  .orbit-1 {
    width: 40vw;
    height: 40vw;
    max-width: 500px;
    max-height: 500px;
    animation-duration: 90s;
  }

  .orbit-2 {
    width: 60vw;
    height: 60vw;
    max-width: 750px;
    max-height: 750px;
    border-color: rgba(102, 67, 226, 0.12);
    animation-duration: 120s;
    animation-direction: reverse;
  }

  .orbit-3 {
    width: 85vw;
    height: 85vw;
    max-width: 1000px;
    max-height: 1000px;
    border-color: rgba(156, 133, 223, 0.08);
    animation-duration: 180s;
  }

  @keyframes orbit-rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Orbital nodes */
  .orbital-node {
    position: absolute;
    width: 12px;
    height: 12px;
    background: var(--color-lilac);
    border-radius: 50%;
    box-shadow: 0 0 20px var(--color-lilac), 0 0 40px rgba(156, 133, 223, 0.5);
  }

  .orbital-node::after {
    content: attr(data-label);
    position: absolute;
    top: 50%;
    left: calc(100% + 12px);
    transform: translateY(-50%);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-lilac);
    opacity: 0;
    transition: opacity 0.3s ease;
    white-space: nowrap;
  }

  .orbital-node:hover::after {
    opacity: 1;
  }

  .node-pulse {
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 1px solid var(--color-lilac);
    animation: pulse 2s ease-out infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); opacity: 0.6; }
    100% { transform: scale(2.5); opacity: 0; }
  }

  .node-1 { top: 20%; left: 15%; animation: float-1 8s ease-in-out infinite; }
  .node-2 { top: 35%; right: 20%; animation: float-2 10s ease-in-out infinite; }
  .node-3 { bottom: 30%; left: 25%; animation: float-3 12s ease-in-out infinite; }
  .node-4 { bottom: 20%; right: 15%; animation: float-4 9s ease-in-out infinite; }

  @keyframes float-1 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(20px, -15px); }
  }
  @keyframes float-2 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-15px, 20px); }
  }
  @keyframes float-3 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(25px, 10px); }
  }
  @keyframes float-4 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-20px, -20px); }
  }

  /* Nucleus glow */
  .nucleus-glow {
    position: absolute;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(102, 67, 226, 0.3) 0%, transparent 70%);
    filter: blur(60px);
    animation: glow-pulse 4s ease-in-out infinite;
  }

  @keyframes glow-pulse {
    0%, 100% { transform: scale(1); opacity: 0.6; }
    50% { transform: scale(1.2); opacity: 0.8; }
  }

  .nucleus-title {
    text-shadow: 0 0 80px rgba(102, 67, 226, 0.5);
  }

  /* Scroll indicator animation */
  .scroll-line {
    animation: scroll-hint 2s ease-in-out infinite;
  }

  @keyframes scroll-hint {
    0%, 100% { opacity: 0.6; transform: scaleY(1); }
    50% { opacity: 1; transform: scaleY(1.3); }
  }

  /* CTA hover effect */
  .nucleus-cta:hover {
    box-shadow: 0 0 30px rgba(102, 67, 226, 0.4);
  }
</style>
